<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="organizzapartitaAPP-ejbPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/organizzapartita</jta-data-source>
    <class>entities.Account</class>
    <class>entities.Amicizia</class>
    <class>entities.Campo</class>
    <class>entities.ChangePasswordRequest</class>
    <class>entities.Gestore</class>
    <class>entities.Gruppo</class>
    <class>entities.Invito</class>
    <class>entities.Prenotazione</class>
    <class>entities.Updates</class>
    <class>entities.Utente</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
